---
import TerminalIcon from '../../atoms/terminal-icon/TerminalIcon.astro';
import Terminal from '../terminal/Terminal.astro';
import './skills-on-terminal.css';
---

<Terminal nombre='HR'>
  <div class='terminal__skills'>
    <h2>Mis habilidades</h2>
    <div class='terminal__skills__container'>
      <TerminalIcon
        src='/assets/bootstrap.svg'
        color='#7738ff'
        name='Bootstrap'
      />
      <TerminalIcon
        src='/assets/angular.svg'
        color='#FF4747'
        name='Angular'
      />
      <TerminalIcon src='/assets/react.svg' color='#00D1FF' name='React' />
      <TerminalIcon src='/assets/nodejs.svg' color='#339933' name='Node' />
      <TerminalIcon
        src='/assets/mongodb.svg'
        color='#47A248'
        name='Mongo'
      />
      <TerminalIcon
        src='/assets/javascript.svg'
        color='#F7DF1E'
        name='Javascript'
      />
      <TerminalIcon
        src='/assets/typescript.svg'
        color='#3178C6'
        name='Typescript'
      />
      <TerminalIcon src='/assets/mysql.svg' color='#00758F' name='mysql' />
      <TerminalIcon src='/assets/html.svg' color='#E34F26' name='html' />
      <TerminalIcon src='/assets/css.svg' color='#00A3FF' name='CSS' />
      <TerminalIcon
        src='/assets/tailwind.svg'
        color='#38B2AC'
        name='tailwind'
      />
    </div>
  </div>
</Terminal>
